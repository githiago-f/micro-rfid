extends layout/default.pug
include components/nav.pug
include components/form-mixins.pug

block content
    +navbar()
    section.pt-5.w-75.mx-auto
        form(action="/users/" + user.id, method="post")
            h3 Dados do cartão
            +hiddenInput("card_id", user.card.id, "ID")
            +input("card_rfid", user.card.rfid, "RFID")
            h3 Dados do usuário
            +input("name", user.name, "Nome do usuário")
            +input("email", user.email, "E-mail do usuário")
            //- +select("project", projects, "Selecionar um projeto")
            input.btn.btn-success(type="submit", value="Salvar")